{
	"hosting": {
		"public": "dist",
		"cleanUrls": true,

		"headers": [
			{
				"source": "/admin/**",
				"headers": [{ "key": "X-Robots-Tag", "value": "noindex, nofollow" }]
			},
			{
				"source": "**/*.@(png|jpg|jpeg|gif|webp|svg)",
				"headers": [{ "key": "Cache-Control", "value": "public,max-age=31536000,immutable" }]
			}
		],

		"rewrites": [
			{
				"source": "**",
				"destination": "/index.html"
			}
		]
	}
}
